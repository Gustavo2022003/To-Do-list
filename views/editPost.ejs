<%- include("partials/header.ejs") %>

<body>

    <div class="container">
        <h1 class="title">Edit Post</h1>
        <br>

        <form action="/editPost/<%= post.ID %>" method="POST">

            <div class="postTextArea">
                <textarea name="updatedText" id="updatedText" class="textArea center" placeholder="Edit your post" autofocus required><%= post.message %></textarea>
            </div>

            <div class="postBtnDiv">
                <input type="text" placeholder="Title" class="textInput" id="title" name="title" value="<%= post.title %>" required>
                <button type="submit" class="postBtn">Save Changes</button>
            </div>
        </form>
    </div>

    <%- include("partials/footer.ejs", { year: year }) %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>